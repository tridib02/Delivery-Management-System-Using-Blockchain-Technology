<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Add Order
            </h1>
            <%= include ("./partials/messages"); %>
                <form action="/order/addorder" method="POST">
                    <div class="form-group">
                        <label for="pickupad">Pick Up Address</label>
                        <input type="text" id="pickupad" name="pickupad" class="form-control" placeholder="Enter Pick Up Address"
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="dropad">Drop Address</label>
                        <input type="text" id="dropad" name="dropad" class="form-control" placeholder="Enter Drop Address"
                            value="<%= typeof dropad != 'undefined' ? dropad : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
        </div>
    </div>
</div>