<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Update Status
            </h1>
            <%= include ("./partials/messages"); %>
                <form action="/order/updateorder" method="POST">
                    <div class="form-group">
                        <label for="orderId">Order Id</label>
                        <input type="text" id="name" name="orderId" class="form-control"
                            placeholder="Enter Pick Up Address" value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <input type="text" id="name" name="status" class="form-control"
                            placeholder="Enter Update Status"
                            value="<%= typeof dropad != 'undefined' ? dropad : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
        </div>
    </div>
</div>